{
    "manifest_version": 3,
    "name": "pinyinify",
    "description": "displays pinyin for selected chinese text.",
    "version": "1.0",
    "icons": {
      "48": "icons/icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["highlight.js"]
      }
    ], 
    "web_accessible_resources": [
      {
        "resources": [ "popup.html" ],
        "matches": [ "<all_urls>" ]
      }
      
    ]
  
}